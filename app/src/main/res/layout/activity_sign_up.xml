<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cuttond"

    android:id="@+id/mainl"
    tools:context=".SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:padding="50dp"
        android:id="@+id/rl1"
        android:layout_gravity="center"
        android:background="#F8F7F7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textAlignment="center"
            android:alpha="4"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/userpro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:civ_border_width="4dp"
            app:civ_border_color="#FF000000"

            />


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:id="@+id/progressbar"/>



        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:id="@+id/nameET"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/creatmailLL"
            android:weightSum="2"
            android:layout_below="@+id/nameET"
            android:layout_centerVertical="true">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:hint="Email"
                android:id="@+id/emailET"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:hint="Email"
                android:text="@diu.edu.bd"
                android:editable="false"
                android:id="@+id/diumailET"
                />


        </LinearLayout>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/passwordET"
            android:layout_below="@+id/creatmailLL"

            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/passwordET"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:id="@+id/confirmpasswordET"
            >

        </EditText>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmpasswordET"
            android:layout_centerHorizontal="true"
            android:id="@+id/registerBTN"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textStyle="bold"
            android:background="@drawable/cuttond"
            android:textAllCaps="false" />


    </RelativeLayout>



</LinearLayout>