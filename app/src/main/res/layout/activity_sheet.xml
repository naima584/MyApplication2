<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sheet">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sheetRL"
        android:id="@+id/viewLL"
        android:gravity="center"
        android:layout_margin="10dp"
        android:weightSum="2"


        >
        <Button
            android:layout_height="wrap_content"
            android:text="Sheet posts"
            android:id="@+id/sheetsaleBTN"
            android:textAllCaps="false"
            android:background="@drawable/cuttonppp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

        <Button
            android:layout_height="wrap_content"
            android:text="Sale"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/sheetpostBTN"
            android:background="@drawable/cuttonppp"

            />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sheetRL">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sheet Information"
            android:textColor="#F7F6F6"
            android:id="@+id/sheetinfo"
            android:background="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="italic"
            android:alpha="7"
            android:textSize="30sp"/>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/viewLL"
        android:orientation="vertical"
        android:background="@drawable/cutton"
        android:padding="0dp"

        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/sheetpostLL"
        android:visibility="gone"

        >





    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject Name"
            android:id="@+id/nameSET"
            android:inputType="text"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:id="@+id/quantitySET"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Topic"
            android:id="@+id/topicSET"
            android:inputType="text"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:id="@+id/priceSET"
            android:inputType="text"

            />





        <Button
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textColor="#251F1F"
            android:textStyle="bold"
            android:background="@drawable/cuttond"
            android:id="@+id/postSBTN"/>



    </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/cutton"
            android:id="@+id/sheetrecyclerRV">

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>




</RelativeLayout>