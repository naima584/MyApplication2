<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentDetails">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/infoRL"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorAccent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Details"
            android:textStyle="bold"
            android:id="@+id/infoTV"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="#F7F6F6"
            />

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/circleIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/studtdetail"
            android:layout_centerInParent="true"

            android:layout_below="@+id/infoTV"
            />



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/cutton"
        android:layout_margin="20dp"
        android:layout_below="@+id/infoRL"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/cutton"
            android:layout_margin="20dp"
            android:layout_below="@+id/infoRL"
            android:orientation="vertical">




             <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                 android:visibility="gone"
                android:id="@+id/nameTV"

                android:inputType="text"
                android:editable="false"
                android:textAlignment="center"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:id="@+id/idTV"
                android:editable="false"
                android:textAlignment="center"



                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:hint="Id"
                android:id="@+id/depTV"
                android:inputType="text"
                android:editable="false"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department"
                android:id="@+id/batchTV"
                android:editable="false"
                android:inputType="text"
                android:textAlignment="center"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Semester"
                android:editable="false"
                android:id="@+id/semTV"
                android:textAlignment="center"

                android:inputType="text"

                />
            <EditText
                android:layout_width="match_parent"
                android:textAlignment="center"

                android:layout_height="wrap_content"
                android:hint="Sec"
                android:editable="false"
                android:id="@+id/secTV"
                android:inputType="text"

                />









        </LinearLayout>







</LinearLayout>



</RelativeLayout>